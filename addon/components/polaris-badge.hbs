<span
  data-test-badge
  class="Polaris-Badge {{this.statusClass}} {{this.progressClass}} {{this.sizeClass}}"
  ...attributes
>
  {{#if this.statusDescription}}
    <PolarisVisuallyHidden @text={{this.statusDescription}} />
  {{/if}}

  {{#if this.progressDescription}}
    <span class="Polaris-Badge__Pip">
      <PolarisVisuallyHidden @text={{this.progressDescription}} />
    </span>
  {{/if}}

  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{@text}}
  {{/if}}
</span>
