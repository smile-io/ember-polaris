{{#if this.breadcrumb}}
  <nav
    role="navigation"
    data-test-breadcrumbs
    ...attributes
  >
    {{#if this.breadcrumb.url}}
      <PolarisUnstyledLink
        class="Polaris-Breadcrumbs__Breadcrumb {{if this.polaris.features.newDesignLanguage "Polaris-Breadcrumbs--newDesignLanguage"}}"
        @url={{this.breadcrumb.url}}
        @ariaLabel={{this.breadcrumb.accessibilityLabel}}
        @onMouseUp={{this.handleMouseUpByBlurring}}
      >
        <span class="Polaris-Breadcrumbs__ContentWrapper">
          <span data-test-breadcrumb-icon class="Polaris-Breadcrumbs__Icon">
            <PolarisIcon @source={{if this.polaris.features.newDesignLanguage "ArrowLeftMinor" "ChevronLeftMinor"}} />
          </span>

          {{#if this.polaris.features.newDesignLanguage}}
            <PolarisVisuallyHidden>
              {{this.breadcrumb.content}}
            </PolarisVisuallyHidden>
          {{else}}
            <span data-test-breadcrumb-content class="Polaris-Breadcrumbs__Content">
              {{this.breadcrumb.content}}
            </span>
          {{/if}}
        </span>
      </PolarisUnstyledLink>
    {{else}}
      <button
        class="Polaris-Breadcrumbs__Breadcrumb {{if this.polaris.features.newDesignLanguage "Polaris-Breadcrumbs--newDesignLanguage"}}"
        type="button"
        aria-label={{this.breadcrumb.accessibilityLabel}}
        {{on "click" this.handleClick}}
        {{on "mouseup" this.handleMouseUpByBlurring}}
      >
        <span class="Polaris-Breadcrumbs__ContentWrapper">
          <span data-test-breadcrumb-icon class="Polaris-Breadcrumbs__Icon">
            <PolarisIcon @source={{if this.polaris.features.newDesignLanguage "ArrowLeftMinor" "ChevronLeftMinor"}} />
          </span>

          {{#if this.polaris.features.newDesignLanguage}}
            <PolarisVisuallyHidden>
              {{this.breadcrumb.content}}
            </PolarisVisuallyHidden>
          {{else}}
            <span data-test-breadcrumb-content class="Polaris-Breadcrumbs__Content">
              {{this.breadcrumb.content}}
            </span>
          {{/if}}
        </span>
      </button>
    {{/if}}
  </nav>
{{/if}}
