{{#let (element (if this.hasMultipleSections "ul" "div")) as |ActionList|}}
  <ActionList class="Polaris-ActionList" ...attributes>
    {{#each this.finalSections as |section|}}
      <PolarisActionList::Section
        @section={{section}}
        @hasMultipleSections={{this.hasMultipleSections}}
        @actionRole={{@actionRole}}
        @onActionAnyItem={{this.onActionAnyItem}}
      />
    {{/each}}
  </ActionList>
{{/let}}
