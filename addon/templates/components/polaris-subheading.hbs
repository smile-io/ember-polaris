{{#let (element (or @htmlTag @tagName "h3")) as |Subheading|}}
  <Subheading
    class="Polaris-Subheading {{@class}}"
    aria-label={{this.ariaLabel}}
    {{did-insert this.setAriaLabel}}
    ...attributes
  >
    <RenderDetector @onRender={{this.updateAriaLabel}}>
      {{#if hasBlock}}
        {{yield}}
      {{else}}
        {{@text}}
      {{/if}}
    </RenderDetector>
  </Subheading>
{{/let}}
