{{#with
  (component
    "polaris-button/content"
    text=@text
    primary=@primary
    destructive=@destructive
    loading=@loading
    disclosure=@disclosure
    icon=@icon
  ) as |Content|
}}
  {{#if @url}}
    {{#if this.isDisabled}}
      {{!
        Render an `<a>` so toggling disabled/enabled state changes only the
        `href` attribute instead of replacing the whole element.
      }}
      <a
        id={{this.id}}
        class={{this.classes}}
        aria-label={{@accessibilityLabel}}
        data-test-id={{@dataTestId}}
        ...attributes
      >
        {{#if hasBlock}}
          <Content>
            {{yield}}
          </Content>
        {{else}}
          <Content />
        {{/if}}
      </a>
    {{else}}
      <PolarisUnstyledLink
        class={{this.classes}}
        id={{this.id}}
        @dataTestId={{@dataTestId}}
        @url={{@url}}
        @external={{@external}}
        @download={{@download}}
        @ariaLabel={{@accessibilityLabel}}
        @onClick={{action this.onClick}}
        @onFocus={{action this.onFocus}}
        @onBlur={{action this.onBlur}}
        @onMouseUp={{action this.handleMouseUpByBlurring}}
        ...attributes
      >
        {{#if hasBlock}}
          <Content>
            {{yield}}
          </Content>
        {{else}}
          <Content />
        {{/if}}
      </PolarisUnstyledLink>
    {{/if}}
  {{else}}
    <button
      id={{this.id}}
      data-test-id={{@dataTestId}}
      class={{this.classes}}
      disabled={{this.isDisabled}}
      type={{if @submit "submit" "button"}}
      role={{if @loading "alert"}}
      aria-busy={{if this.loading "true"}}
      aria-label={{@accessibilityLabel}}
      aria-controls={{@ariaControls}}
      aria-expanded={{if @ariaExpanded "true"}}
      aria-pressed={{if @ariaPressed "true"}}
      {{on "click" this.onClick}}
      {{on "focus" this.onFocus}}
      {{on "blur" this.onBlur}}
      {{on "keydown" this.onKeyDown}}
      {{on "keyup" this.onKeyUp}}
      {{on "keypress" this.onKeyPress}}
      {{on "mouseup" this.handleMouseUpByBlurring}}
      ...attributes
    >
      {{#if hasBlock}}
        <Content>
          {{yield}}
        </Content>
      {{else}}
        <Content />
      {{/if}}
    </button>
  {{/if}}
{{/with}}
