{{#let (element (or @htmlTag @tagName "p")) as |DisplayText|}}
  <DisplayText
    class="Polaris-DisplayText {{this.sizeClassName}} {{@class}}"
    data-test-display-text
    ...attributes
  >
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{@text}}
    {{/if}}
  </DisplayText>
{{/let}}
