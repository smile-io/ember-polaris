{{#polaris-stack
  spacing="tight"
  distribution=(if showSecondaryActions "equalSpacing" "trailing")
}}
  {{#if showSecondaryActions}}
    {{#polaris-button-group}}
      {{#each secondaryActions as |secondaryAction|}}
        {{polaris-button
          text=secondaryAction.text
          disabled=secondaryAction.disabled
          loading=secondaryAction.loading
          destructive=secondaryAction.destructive
          icon=secondaryAction.icon
          onClick=(action "fireAction" secondaryAction)
        }}
      {{/each}}
    {{/polaris-button-group}}
  {{/if}}

  {{#if primaryAction}}
    {{polaris-button
      primary=true
      disabled=primaryAction.disabled
      loading=primaryAction.loading
      text=primaryAction.text
      onClick=(action "fireAction" primaryAction)
    }}
  {{/if}}
{{/polaris-stack}}
