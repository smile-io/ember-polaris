{{#polaris-text-container}}
  {{polaris-display-text data-test-empty-state-heading=true size="medium" text=heading}}
  <div data-test-empty-state-content class="Polaris-EmptyState__Content">
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{text}}
    {{/if}}
  </div>
{{/polaris-text-container}}

{{#if primaryAction}}
  <div class="Polaris-EmptyState__Actions">
    {{#polaris-stack data-test-empty-state-actions=true alignment="center" as |stack|}}
      {{polaris-button
        primary=true
        size="large"
        text=primaryAction.text
        onClick=(action primaryAction.onAction)
      }}

      {{#if secondaryAction}}
        {{#stack.item}}
          {{polaris-button
            plain=true
            text=secondaryAction.text
            onClick=(action secondaryAction.onAction)
          }}
        {{/stack.item}}
      {{/if}}
    {{/polaris-stack}}
  </div>
{{/if}}
