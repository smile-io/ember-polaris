{{#let (element (if (eq this.elementTagName "code") "code" "span")) as |TextStyle|}}
  <TextStyle
    class={{this.textStyleClasses}}
    data-test-text-style={{or @dataTestTextStyle ""}}
    ...attributes
  >
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{@text}}
    {{/if}}
  </TextStyle>
{{/let}}