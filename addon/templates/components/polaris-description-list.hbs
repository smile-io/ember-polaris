<dl class="Polaris-DescriptionList {{@class}}" ...attributes>
  {{#each @items as |item|}}
    <dt class="Polaris-DescriptionList__Term">
      {{render-content item.term}}
    </dt>
    <dd class="Polaris-DescriptionList__Description">
      {{render-content item.description}}
    </dd>
  {{/each}}
</dl>