<div class="Polaris-Card__SectionHeader {{@class}}" ...attributes>
  {{#if @title}}
    {{#if (is-component-definition @title)}}
      {{render-content @title}}
    {{else}}
      <PolarisSubheading @text={{@title}} />
    {{/if}}
  {{/if}}

  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{@text}}
  {{/if}}
</div>