{
  "name": "ember-polaris",
  "version": "0.0.0",
  "private": true,
  "repository": "",
  "license": "MIT",
  "author": "",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "pnpm --filter @smile-io/ember-polaris build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter @smile-io/ember-polaris start --no-watch.clearScreen",
    "start:tests": "pnpm --filter test-app start",
    "storybook": "concurrently 'pnpm --filter @smile-io/ember-polaris start:js' 'pnpm --filter explorer storybook-dev' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "test": "pnpm --filter test-app test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it-plugins/workspaces": "^4.0.0",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.1",
    "prettier-plugin-ember-template-tag": "^1.0.2",
    "release-it": "^16.1.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0",
      "@storybook/ember>ember-source": "~5.2.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "ember-source": "~5.2.0"
      }
    }
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "engines": {
    "node": ">= 18.*",
    "yarn": "use pnpm",
    "npm": "use pnpm"
  },
  "volta": {
    "node": "18.17.0",
    "pnpm": "8.6.11"
  }
}
