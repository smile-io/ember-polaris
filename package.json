    "component library",
    "components",
    "design",
    "ember",
    "ember-addon",
    "polaris",
    "shopify"
  ],
  "homepage": "https://github.com/smile-io/ember-polaris#readme",
  "bugs": {
    "url": "https://github.com/smile-io/ember-polaris/issues"
