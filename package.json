{
  "name": "ember-polaris",
  "version": "0.0.0",
  "private": true,
  "repository": "",
  "license": "MIT",
  "author": "",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "pnpm --filter @smile-io/ember-polaris build",
    "clean": "concurrently 'npm:clean:*'",
    "clean:dist": "find . -not \\( -path './node_modules' -type d -prune \\) -name 'dist' -type d -exec rm -rf '{}' +",
    "clean:node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter @smile-io/ember-polaris start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "storybook": "pnpm --filter @smile-io/ember-polaris build:js && pnpm --filter explorer prebuild-storybook && pnpm --filter explorer storybook",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it-plugins/workspaces": "^4.0.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-ember-template-tag": "^1.1.0",
    "release-it": "^16.1.3",
    "@glint/core": "^1.2.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0",
      "@storybook/ember>ember-source": "~5.2.0",
      "webpack": "^5.90.3"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "ember-source": "~5.2.0"
      }
    }
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "engines": {
    "node": ">= 18.*",
    "yarn": "use pnpm",
    "npm": "use pnpm"
  },
  "volta": {
    "node": "18.17.0",
    "pnpm": "8.6.11"
  }
}
