<PolarisResourceList::Item
  @itemId={{itemId}}
  @url={{item.url}}
  @accessibilityLabel={{accessibilityLabel}}
  @media={{component "polaris-avatar" customer=true size="medium" name=item.name}}
  @shortcutActions={{if
    item.latestOrderUrl
    (array (hash text="View latest order" url=item.latestOrderUrl))
  }}
  @persistActions={{true}}
>
  <h3>
    <PolarisTextStyle @variation="strong" @text={{item.name}} />
  </h3>
  <div>{{item.location}}</div>
</PolarisResourceList::Item>